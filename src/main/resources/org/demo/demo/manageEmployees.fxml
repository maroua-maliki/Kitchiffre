<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.demo.demo.controller.ManageEmployeesController"
            stylesheets="@css/manageEmployees.css">

    <!-- Navbar -->
    <top>
        <fx:include source="navbar.fxml"/>
    </top>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="10" alignment="CENTER" styleClass="content-section">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <!-- Titre principal -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="Gestion des Employés" styleClass="section-title"/>
                <Rectangle width="50" height="2" styleClass="section-underline"/>
            </VBox>

            <!-- Section unique de gestion des employés -->
            <VBox spacing="15" alignment="CENTER" styleClass="single-employee-section">

                <!-- Formulaire d'ajout -->
                <VBox spacing="10" alignment="CENTER" styleClass="add-form">
                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="usernameField" promptText="nom@capgemini.com" prefWidth="200"/>
                        <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="150"/>
                        <Button fx:id="addEmployeeButton" text="Ajouter" onAction="#handleAddEmployee" styleClass="primary-button"/>
                    </HBox>
                    <Label fx:id="statusLabel" text="" styleClass="status-message"/>
                </VBox>

                <!-- Liste des employés -->
                <VBox spacing="10" alignment="CENTER" styleClass="employee-list-section">

                    <!-- Titre de la liste -->
                    <Label text="Liste des employés" styleClass="section-title"/>

                    <!-- Barre de recherche -->
                    <HBox spacing="5" alignment="CENTER_LEFT" styleClass="search-box">
                        <TextField fx:id="searchField" promptText="Rechercher un employé..." styleClass="search-field"/>
                        <Button fx:id="searchButton" onAction="#handleSearch" styleClass="search-button" text="🔍"/>
                    </HBox>


                    <!-- Liste scrollable -->
                    <ScrollPane prefHeight="200" prefWidth="500" styleClass="employee-scroll">
                        <VBox fx:id="employeeContainer" spacing="2" styleClass="employee-container"/>
                    </ScrollPane>

                </VBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>
